extends layout

block content
  div.nav-path 
    a( class= "nav-path-links" href="/") Home
    p  / 
    a( class= "nav-path-links" href="/cocktails") Cocktails

    
  div.list-page
    div.list-container
      h1 Cocktail List
      hr

      if cocktails
        for cocktail in cocktails 
          div.item
            h3= cocktail.name 
            p= cocktail.liquor.name
            p= cocktail.description 
      div
        a(href="/cocktails/create") Create New Cocktail